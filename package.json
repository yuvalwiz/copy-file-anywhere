{
  "name": "copy-file-anywhere",
  "displayName": "Copy File Anywhere",
  "publisher": "yuvalwiz",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.90.0"
  },
  "license": "MIT",
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/yuvalwiz/copy-file-anywhere"
  },
  "scripts": {
    "dev": "esbuild src/extension.ts --bundle --sourcemap --watch --external:vscode --outfile=dist/extension.js",
    "build": "esbuild src/extension.ts --bundle --platform=node --minify --external:vscode --outfile=dist/extension.js",
    "vscode:prepublish": "npm run build",
    "publish:patch": "npm version patch && npx ovsx publish",
    "publish:minor": "npm version minor && npx ovsx publish",
    "publish:major": "npm version major && npx ovsx publish",
    "publish": "npm run publish:patch"
  },
  "contributes": {
    "commands": [
      {
        "command": "copyfileanywhere.heredoc",
        "title": "Heredoc: wrap current file → script"
      },
      {
        "command": "copyfileanywhere.base64",
        "title": "Base64: copy current file → script"
      },
      {
        "command": "copyfileanywhere.heredocCustom",
        "title": "Heredoc: wrap current file → custom path"
      },
      {
        "command": "copyfileanywhere.base64Custom",
        "title": "Base64: copy current file → custom path"
      }
    ]
  },
  "devDependencies": {
    "esbuild": "^0.25.8"
  }
}
